---
layout: false
---
{{#extend "base-view"}}
	{{#content "title"}}ObliqueUI Preview Widget{{/content}}
	{{#content "head"}}
		<style type="text/css">
			html, body {
				height: 100%;
			}

			.widget-preview {
				position: relative;
				height: 100%;
				padding: 15px;
				background-color: #fefefe;
				box-shadow: inset 0 3px 6px rgba(0, 0, 0, .05);
				border: 1px solid #F4F4F4;
			}

			.widget-preview > label {
				font-size: 12px;
				font-weight: bold;
				color: #D4D4D4;
				text-transform: uppercase;
				letter-spacing: 1px;
			}

			.widget-preview-content {
				margin: auto;
			}
		</style>
		<script src="{{assets}}js/oblique-ui-widget.js"></script>
	{{/content}}
	{{#content "base"}}
		<div class="alert fade hide" data-notification="alert">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<h4>Oups! Something went wrong...</h4>
			<p><!-- Dynamically updated --></p>
			<pre class="hide"><!-- Dynamically updated --></pre>
		</div>
		<div class="widget-preview hide">
			<label>Preview</label>
			<div class="widget-preview-content"><!-- Dynamically updated --></div>
		</div>
	{{/content}}
{{/extend}}
