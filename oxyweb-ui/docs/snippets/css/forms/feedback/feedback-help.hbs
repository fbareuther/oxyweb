<form class="form-horizontal" role="form">
	<div class="form-group">
		<label for="docs-example-forms-feedback-help-placeholder" class="col-sm-3 control-label">Email</label>
		<div class="col-sm-9">
			<input type="email" class="form-control" id="docs-example-forms-feedback-help-placeholder" placeholder="This placeholder text can provide some hint.">
		</div>
	</div>
	<div class="form-group">
		<label for="docs-example-forms-feedback-help-icon" class="col-sm-3 control-label">Email</label>
		<div class="col-xs-8 col-sm-8">
			<input type="email" class="form-control" id="docs-example-forms-feedback-help-icon" placeholder="Email">
			<span class="help-block">This field has an additional help element on the right.</span>
		</div>
		<div class="col-xs-4 col-sm-1" >
			<a class="form-control-static" role="button" title="Please, enter a valid email address.">
				<span class="fa fa-question-circle"></span>
			</a>
		</div>
	</div>
	<div class="form-group">
		<label for="docs-example-forms-feedback-help-tooltip" class="col-sm-3 control-label">Email</label>
		<div class="col-sm-9">
			<input type="email" class="form-control" id="docs-example-forms-feedback-help-tooltip" placeholder="Email"
			       data-toggle="tooltip" data-placement="left" title="Please, enter a valid email address.">
			<span class="help-block">Hover input field to get feedback!</span>
		</div>
	</div>
</form>
