<form class="form-inline" role="form">
	<div class="form-group">
		<label class="sr-only" for="docs-examples-forms-layouts-inline-email">Email address</label>
		<input type="email" class="form-control" placeholder="Enter email" id="docs-examples-forms-layouts-inline-email">
	</div>
	<div class="form-group">
		<label class="sr-only" for="docs-examples-forms-layouts-inline-password">Password</label>
		<input type="password" class="form-control" placeholder="Password" id="docs-examples-forms-layouts-inline-password">
	</div>
	<div class="checkbox">
		<label>
			<input type="checkbox"> Remember me
		</label>
	</div>
	<div class="form-actions">
		<button type="submit" class="btn btn-primary pull-right">Sign in</button>
		<button type="reset" class="btn btn-link">Forgot password?</button>
	</div>
</form>
